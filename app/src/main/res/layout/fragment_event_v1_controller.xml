<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.event_v1.EventV1ControllerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/label_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_date"
            android:textAppearance="@style/label_controller"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:inputType="none"
            android:focusable="false"
            style="@style/edit_text_controller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_date"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/label_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_time"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/label_controller"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"/>

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            style="@style/edit_text_controller"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/label_time"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/label_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_location"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/label_controller"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_date" />

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/edit_text_controller"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_location"/>

        <TextView
            android:id="@+id/label_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_or"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textAppearance="@style/label_controller"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/edit_location"
            app:layout_constraintBottom_toBottomOf="@+id/edit_location"/>

        <ImageView
            android:id="@+id/location_picker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_pin"
            app:layout_constraintStart_toEndOf="@+id/label_or"
            app:layout_constraintTop_toTopOf="@+id/edit_location"
            app:layout_constraintBottom_toBottomOf="@+id/edit_location"
            />

        <TextView
            android:id="@+id/label_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_latitude"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/label_controller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/edit_location"/>

        <EditText
            android:id="@+id/edit_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/edit_text_controller"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_latitude"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            />

        <TextView
            android:id="@+id/label_longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_longitude"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/label_controller"
            app:layout_constraintTop_toTopOf="@+id/label_latitude"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/edit_longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/edit_text_controller"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/label_longitude"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
