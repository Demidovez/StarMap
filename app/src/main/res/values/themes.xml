<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.StarMap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/white</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:timePickerStyle" tools:targetApi="21">@style/TimePickerStyle</item>
    </style>

    <style name="tool_bar_text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="full_screen_dialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="label_controller">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_shadow</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="edit_text_controller" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="view_text_controller" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="text_area" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">3</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.DatePicker" tools:targetApi="lollipop">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.TimePicker" tools:targetApi="lollipop">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="location_in_event_dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_shadow</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="country_in_event_dialog">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="title_dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_shadow</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="desc_dialog">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="dialog_corners" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="title_rect_recycler_item">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="subTitleRecyclerItem">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="date_picker_style" parent="@android:style/Widget.DatePicker">

    </style>

    <style name="date_time_spinner_theme">
        <item name="colorControlNormal">@color/dark</item>
        <item name="android:editTextStyle">@style/text_style_picker</item>
    </style>

    <style name="text_style_picker">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="project_title">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="project_desc">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="project_location">
        <item name="android:textColor">@color/dark_shadow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="not_found_projects">
        <item name="android:textColor">@color/dark_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="label_setting">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="text_area_about_problem" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLines">5</item>
    </style>

</resources>